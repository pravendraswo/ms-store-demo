<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="0 0 300 300">
  <!-- Xbox green gradient -->
  <defs>
    <linearGradient id="xboxGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#9ACD32;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#6B8E23;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Controller body -->
  <ellipse cx="150" cy="180" rx="100" ry="60" fill="url(#xboxGrad)" stroke="#556B2F" stroke-width="3"/>
  <ellipse cx="150" cy="180" rx="85" ry="45" fill="none" stroke="#8FBC8F" stroke-width="2" opacity="0.7"/>
  
  <!-- D-pad -->
  <rect x="100" y="170" width="25" height="8" fill="#333" rx="4"/>
  <rect x="108" y="162" width="8" height="25" fill="#333" rx="4"/>
  
  <!-- Buttons -->
  <circle cx="190" cy="160" r="8" fill="#FF6347"/>
  <circle cx="210" cy="175" r="8" fill="#32CD32"/>
  <circle cx="190" cy="190" r="8" fill="#1E90FF"/>
  <circle cx="170" cy="175" r="8" fill="#FFD700"/>
  
  <!-- Button labels -->
  <text x="190" y="164" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="white" font-weight="bold">Y</text>
  <text x="210" y="179" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="white" font-weight="bold">B</text>
  <text x="190" y="194" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="white" font-weight="bold">A</text>
  <text x="170" y="179" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="white" font-weight="bold">X</text>
  
  <!-- Joysticks -->
  <circle cx="120" cy="200" r="15" fill="#333"/>
  <circle cx="120" cy="200" r="8" fill="#666"/>
  <circle cx="180" cy="210" r="15" fill="#333"/>
  <circle cx="180" cy="210" r="8" fill="#666"/>
  
  <!-- Xbox logo -->
  <circle cx="150" cy="145" r="20" fill="white"/>
  <path d="M 140 135 Q 150 125 160 135 Q 150 145 140 135" fill="#107C10"/>
  <path d="M 140 155 Q 150 165 160 155 Q 150 145 140 155" fill="#107C10"/>
  
  <text x="150" y="280" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#6B8E23" font-weight="bold">Xbox Controller Plushie</text>
</svg>