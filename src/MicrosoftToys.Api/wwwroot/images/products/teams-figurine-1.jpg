<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="0 0 300 300">
  <!-- Teams purple gradient background -->
  <defs>
    <linearGradient id="teamsGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#6264A7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#464775;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Figurine base -->
  <ellipse cx="150" cy="260" rx="50" ry="15" fill="#333" opacity="0.3"/>
  
  <!-- Body -->
  <rect x="120" y="180" width="60" height="80" fill="url(#teamsGrad)" rx="30"/>
  
  <!-- Head -->
  <circle cx="150" cy="130" r="35" fill="#FFE4B5"/>
  
  <!-- Teams logo background -->
  <rect x="125" y="190" width="50" height="50" fill="white" rx="5"/>
  
  <!-- Teams icon -->
  <rect x="130" y="200" width="15" height="15" fill="#6264A7" rx="2"/>
  <rect x="150" y="200" width="15" height="15" fill="#6264A7" rx="2"/>
  <rect x="130" y="218" width="35" height="12" fill="#6264A7" rx="2"/>
  
  <!-- Face -->
  <circle cx="140" cy="125" r="3" fill="#333"/>
  <circle cx="160" cy="125" r="3" fill="#333"/>
  <path d="M 140 135 Q 150 142 160 135" stroke="#333" stroke-width="2" fill="none"/>
  
  <!-- Arms -->
  <ellipse cx="100" cy="200" rx="12" ry="25" fill="#FFE4B5"/>
  <ellipse cx="200" cy="200" rx="12" ry="25" fill="#FFE4B5"/>
  
  <!-- Legs -->
  <rect x="135" y="250" width="12" height="25" fill="#464775" rx="6"/>
  <rect x="153" y="250" width="12" height="25" fill="#464775" rx="6"/>
  
  <text x="150" y="290" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#6264A7" font-weight="bold">Teams Figurine</text>
</svg>